
@model IEnumerable<WebApplication2.Models.DiemDanh>
@{
    ViewBag.Title = "ListDiemDanh";

}

<head>
    <link href="~/Content/Newview/dist/css/style.min.css" rel="stylesheet">
</head>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            @*<div class="panel-heading">
                  Các Khóa Học
                </div>*@
            <!-- /.panel-heading -->
            <!--  NewTable-->
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Danh Sách Điểm Danh Sinh Viên</h4>
                    @*<h6 class="card-subtitle">Data table example</h6>*@
                    <div class="table-responsive m-t-40">
@using (Html.BeginForm("edit", "Course", FormMethod.Post))
{
                    <div style="width:450px; height:30px">
                        <div style="width:200px; float:left">
                            @Html.DropDownList("Buoithu", (SelectList)ViewBag.BuoiHoc, string.Empty, new { @class = "form-control" })
                        </div>
                        <div style="width:200px;float:right">
                            <input type="submit" value="Change" style="height:35px" />
                        </div>
                        </div>
}
                        <table id="myTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    @*<th>Tên Môn Học</th>*@
                                    <th>MSSV</th>
                                    <th>Họ</th>
                                    <th>Tên</th>
                                    <th>Ngày Học</th>
                                    @*<th>Buổi Thứ</th>*@
                                    <th>Trạng Thái</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @*<td>
                                            @Html.DisplayFor(modelItem => item.BuoiHoc.KhoaHoc.MonHoc.TenMH)
                                        </td>*@
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MSSV)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SinhVien.LastName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SinhVien.FirstName)
                                        </td>
                                        <td>
                                            @Convert.ToDateTime(item.BuoiHoc.NgayHoc).ToString("dd/MM/yyyy")
                                        </td>
                                        @*<td>
                                            @Html.DisplayFor(modelItem => item.BuoiHoc.Buoi_thu)
                                        </td>*@
                                        
                                            @if (item.status == true)
                                            {
                                              <td>
                                                 Đi Học
                                              </td>  
                                            }
                                            else
                                            {
                                                <td>
                                                    Vắng Học
                                                </td>
                                            }
                                        <td>
                                            @Html.ActionLink("Status","Change",new { id = item.ID})
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!--  NewTable-->
        </div>
    </div>
</div>

<script src="~/Content/Newview/assets/node_modules/jquery/jquery-3.2.1.min.js"></script>
