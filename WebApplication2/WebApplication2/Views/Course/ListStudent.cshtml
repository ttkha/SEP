
@model IEnumerable<WebApplication2.Models.SinhVien>

@{
    ViewBag.Title = "ListStudent";
    Layout = "~/Views/Shared/_1Layout.cshtml";
    string maKh = Session["MaKH"].ToString();
}


<head>
    <link href="~/Content/Newview/dist/css/style.min.css" rel="stylesheet">
</head>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <!-- /.panel-heading -->
            <!--  NewTable-->
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Danh Sách Sinh Viên</h4>
                    @*<h6 class="card-subtitle">Data table example</h6>*@
                    <div class="table-responsive m-t-40">
                        <a href="~/Course/DIEMDANH/@maKh">
                             <input type="submit" value="Điểm Danh" style="height:35px" /> 
                        </a>
                        <a href="~/Course/SynMember/@maKh">
                            <input type="submit" value="Sync Sinh Viên" style="height:35px" />
                        </a>
                        <table id="myTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Mã Sinh Viên</th>
                                    <th>Tên Sinh Viên</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                                @Html.DisplayFor(modelItem => item.MSSV)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FullName)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!--  NewTable-->
        </div>
    </div>
</div>

