@model IEnumerable<WebApplication2.Models.ThamDu>

@{
    ViewBag.Title = "DIEMDANH";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="~/Content/Newview/dist/css/style.min.css" rel="stylesheet">
</head>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            @*<div class="panel-heading">
                  Các Khóa Học
                </div>*@
            <!-- /.panel-heading -->
            <!--  NewTable-->
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Điểm Danh Sinh Viên</h4>
                    @*<h6 class="card-subtitle">Data table example</h6>*@
                    <div class="table-responsive m-t-40">
                      @*@using (Html.BeginForm("DIEMDANH", "ThamDu", FormMethod.Post))
                      {*@
                        <form action="~/Course/DIEMDANHS" method="post">
                            <table id="myTable" class="table table-bordered table-striped">
                                <thead>
                                    <tr>

                                        <th>MSSV</th>
                                        <th>Họ</th>
                                        <th>Tên</th>
                                        <th>Trạng Thái</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MSSV)
                                                <input type="text" name="MaKh" value="@item.MaKH" hidden/>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SinhVien.LastName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SinhVien.FirstName)
                                            </td>
                                            <td style="text-align:center">
                                                <input type="checkbox" name="status">
                                            </td>



                                        </tr>
                                    }
                                </tbody>

                            </table>
                            <div style="text-align:center">
                                <input type="submit" value="Save">
                            </div>
                        </form>

                </div>
            </div>

            <!--  NewTable-->
        </div>
    </div>
</div>

